@model ShopProjectAsp_PhamVanLinh.ViewModels.ProductViewModel
@using PagedList.Mvc;
@using PagedList;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .create{
        text-align: right
    }
    .des{
        width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 25px;
        -webkit-line-clamp: 3;
        height: 95px;
        display: -webkit-box;
        -webkit-box-orient: vertical;
    }
</style>
<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Table Product </h1>
            <a asp-action="Create" class="btn btn-outline-secondary create">Create New</a>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Product</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">These are the categories currently in the store</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th style="width:300px">Name Product</th>
                    <th >Image</th>
                    <th >Description</th>
                    <th >Price</th>
                    <th >Quantity</th>
                    <th >Category Name</th>

                    <th style="width:250px">Action</th>
                  </tr>
                  </thead>
                  <tbody>
                                @foreach (var item in Model.Products)
                                {
                          <tr>
                            <td style="width:100px;">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td> <img src="@item.img" style="width:80px;height:80px"/></td>
                            <td class="des">@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                            <td>@Html.DisplayFor(modelItem => Model.Categories.FirstOrDefault(u => u.Id == item.Category_id).Name)</td>
                            <td style="width:70px;">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa-solid fa-pen-to-square"></i></a> - 
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="fa-solid fa-eye"></i></a> - 
                                    <a asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                            </td>
                          </tr>
                                }
                  </tfoot>
                  
                </table>
                
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>

